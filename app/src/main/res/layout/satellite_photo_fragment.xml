<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/iv_satellite_photo"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:contentDescription="@string/R_photo"
        app:srcCompat="@android:drawable/ic_delete" />

    <TextView
        android:id="@+id/tv_satellite_name"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_satellite_type"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tv_satellite_type"
        android:layout_marginTop="3dp"
        android:autoText="false"
        android:maxWidth="150dp"
        android:text="@string/R_name"
        android:maxLength="20"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/tv_satellite_type"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="93dp"
        android:layout_marginStart="93dp"
        android:maxWidth="150dp"
        android:text="@string/R_satellite_type"
        android:maxLength="25"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/tv_launch_date_tag"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:maxWidth="150dp"
        android:text="@string/R_launch_date"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/tv_launch_date"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:maxWidth="150dp"
        android:text="@string/R_date"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark" />

</RelativeLayout>